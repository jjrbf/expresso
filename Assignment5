<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Test onclick</title>      
</head>
<body>
        <label for="Search1">Search: </label>
        <input type="text" id="Search1">
        <input type="button" id="btn1" value="Submit">
        <p id="output1"></p>
        <script>
            let txt1 = document.getElementById("Search1");
            let btn1 = document.getElementById("btn1");
            let out1 = document.getElementById("output1");

            btn1.addEventListener("click", function() {
                if (txt1.value === "") {
                    out1.innerHTML = "No information was entered";
                } else {
                    out1.innerHTML = txt1.value;
                }
            });
        </script>
        <label for="ProductCode">Enter Product Code: </label>
        <input type="text" id="ProductCode1">
        <input type="button" id="btn2" value="Submit">
        <p id="output2"></p>
        <script>
            let txt2 = document.getElementById("ProductCode1");
            let btn2 = document.getElementById("btn2");
            let out2 = document.getElementById("output2");

            btn2.addEventListener("click", function() {
                if (txt2.value === "") {
                    out2.innerHTML = "Please enter a product code";
                } else if (!txt2.value.match(/^\d+$/)) {
                    out2.innerHTML = "Product code can only contain numbers";
                } else {
                    out2.innerHTML = txt2.value;
                }
            });
        </script>
    <noscript>
        Your browser has disabled JavaScript
    </noscript>
</body>
</html>
